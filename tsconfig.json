{
  "compilerOptions": {
    "target": "es6",
    "lib": ["es2016", "dom"],   // Додає підтримку стандарту ECMAScript і бібліотек DOM
    "module": "commonjs",
    "strict": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
